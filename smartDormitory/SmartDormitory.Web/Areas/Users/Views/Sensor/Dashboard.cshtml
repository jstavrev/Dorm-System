                                }
                            } else if (value.userMaxValue === 1) {

                                if (value.value === 1) {
                                    $('.' + value.id).append("<status-indicator positive pulse></status-indicator>");
                                } else {
                                    $('.' + value.id).append("<status-indicator negative pulse></status-indicator>");
                                }
                            }
                        }
                    }
                    //console.log(counter);
                    //counter++;
                });
                //counter = 0;
            });
        }
    </script>
}
